@model WebApplication1.Models.Flight

<h2>Confirm Booking</h2>

<div>
    <p><strong>Flight Number:</strong> @Model.FlightNumber</p>
    <p><strong>Departure:</strong> @Model.DepartureAirportId</p>
    <p><strong>Arrival:</strong> @Model.ArrivalAirportId</p>
    <p><strong>Price:</strong> $@Model.Price</p>
</div>

<form asp-action="ConfirmBooking" asp-controller="Booking" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="flightId" value="@Model.FlightId" />
    <input type="hidden" name="totalPrice" value="@Model.Price" />
    <button type="submit" class="btn btn-primary">Confirm Booking</button>
</form>
