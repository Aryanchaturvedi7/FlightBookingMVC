@{
    ViewData["Title"] = "User Dashboard";
}

<style>
    .user-profile {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .initials-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #007bff;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
    }

    .edit-link {
        color: #007bff;
        text-decoration: none;
    }
</style>

<div class="user-profile">
    <div class="initials-circle">
        @ViewBag.Initials
    </div>
    <a class="edit-link" href="@Url.Action("EditProfile", "User")">Edit Profile</a>
</div>

<h2>Welcome, @ViewBag.UserName!</h2>

<div>
    <h3>Your Profile</h3>
    <p><strong>Name:</strong> @ViewBag.UserName</p>
    <p><strong>Email:</strong> @ViewBag.Email</p>
    <p><strong>Phone Number:</strong> @ViewBag.PhoneNumber</p>
</div>

<div>
    <h3>Actions</h3>
    <ul>
        <li><a href="@Url.Action("SearchFlights", "Flight")">Search Flights</a></li>
        <li><a href="@Url.Action("ViewBookings", "Booking")">View Bookings</a></li>
    </ul>
</div>

<form method="post" asp-action="Logout" asp-controller="Home">
    <button type="submit">Logout</button>
</form>

